groups:
- name: NodeExporter_Alerts
  rules:

  # disk is full
  - alert: HighDiskUsage
    expr: (node_filesystem_avail_bytes{fstype=~"ext4|xfs"} / node_filesystem_size_bytes{fstype=~"ext4|xfs"}) * 100 < 20
    for: 10m
    labels:
      severity: critical
    annotations:
